<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://productScreen.caption">

    <data>
        <collection id="productsDc"
                    class="com.company.cssjmixtutorial.entity.Product"
                    fetchPlan="_local">
            <loader id="productsLoader">
                <query>
                    <![CDATA[select e from product e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>

    <layout expand="productsDataGrid">
        <dataGrid id="productsDataGrid"
                  dataContainer="productsDc"
                  width="100%">
            <actions>
                <action id="create" type="create"/>
            </actions>
            <columns>
                <column property="id"/>
                <column property="productCode"/>
                <column property="productName"/>
            </columns>
            <buttonsPanel>
                <button action="productsDataGrid.create"/>
            </buttonsPanel>
        </dataGrid>
    </layout>
</window>